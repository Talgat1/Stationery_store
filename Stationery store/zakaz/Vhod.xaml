<Window x:Class="Stationery_store.zakaz.Vhod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Stationery_store.registration"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1440"
      Title="Vhod">
    <Grid Background="White" >
        <DataGrid AutoGenerateColumns="False" x:Name="Zakaz" ColumnWidth="*" Margin="0,0,1140,0" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Width="150" Header="Товар"/>
                <DataGridTextColumn Binding="{Binding Price}" Width="150" Header="Цена"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Поиск по названию:" HorizontalAlignment="Left" Margin="486,28,0,0" VerticalAlignment="Top" Height="40" Width="182" FontSize="18"/>
        <TextBox x:Name="Poisk" HorizontalAlignment="Left" Height="40" Margin="673,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="249" Background="#FFEAEAEA" TextChanged="Poisk_TextChanged"/>

    </Grid>
</Window>
